<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/w1"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_whatsapp"
            android:id="@+id/whatsuplogo"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Name"
            android:ems="14"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="20sp"
           android:layout_marginTop="20dp"
            android:id="@+id/signupname"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:ems="14"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:id="@+id/signupemail"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:ems="14"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:id="@+id/signuppassword"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already Have An Account?"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:layout_marginRight="17sp"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:id="@+id/signupexist"
/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:layout_marginTop="20dp"
            android:ems="7"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:textColor="@color/white"
            android:background="@drawable/corner"
            android:id="@+id/signupclick"
          />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"

            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_google"
                android:text="Google"
                android:ems="7"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:padding="15dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:background="@drawable/corner"
                android:backgroundTint="@color/white"
                android:id="@+id/signupgoogle"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_facebook"
                android:text=" Faceebook"
                android:padding="15dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:background="@drawable/corner"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/fb_color"
                android:id="@+id/signupfacebook"/>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignUp With Mobile"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:id="@+id/signupnmobile"
            />
    </LinearLayout>
</LinearLayout>